@import "colors"

body {
    box-sizing border-box
    margin: 0
    padding: 0 20px;
    font-family Helvetica, Arial, sans-serif;
}

form {
    margin: 0 auto;
    position: relative;
    font-size 0;
    max-width: 280px;
    box-sizing border-box
}

form:after {
    content: '';
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    max-width: 280px;
    height: 167px;
    width: 100%;
    border-radius: 10px;
    box-shadow: 0 0 10px 0 rgba(0,0,0,.3);
    background-color: #f5f7fa;
    z-index: -1;
}

.city,
.zip_code,
.cpf,
.card_cvv,
.card_holder,
.expiry-date-select,
.card_number {
    position: relative;
}

