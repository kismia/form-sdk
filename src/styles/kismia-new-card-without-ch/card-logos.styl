logo($name)
    background url("img/" + $name + ".png") no-repeat center / contain

$card-logo
    height 25px
    width 25%
    padding 0

    &:before
        content ''
        display block
        height 100%
        width 100%

    &:not(:last-child)
        margin-right 0

card-logo($card-name)
    .{$card-name}
        @extend $card-logo
        logo($card-name)


$cards = "visa", "master-card", "maestro", "discover"

for $card in $cards
    card-logo($card)

.card-brands
    text-align center
    padding 10px 90px 22px 0
    width 235px
    margin 0 auto
    display flex
    align-items center
    justify-content: space-between

.visa
    height: 18px

